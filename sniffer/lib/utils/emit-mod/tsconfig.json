{
  "compilerOptions": {
    // For ES5 compat
    // "lib": ["ES2015"],
    // "target": "ES5",
    // "module": "Node16",
    // Enable latest features
    "lib": ["ES6"],
    "target": "ES6",
    "module": "Node16",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": [
    "src/**/*.ts"
  ]
}
